button {
  transition: all linear 0.2s;
}

.btn-orange {
  color: $white !important;
  background-color: $orange !important;

  &:hover {
    opacity: 0.8;
    background-color: $orange-hover;
  }
}

.btn-blue {
  color: $white !important;
  background-color: $green !important;

  &:hover {
    background-color: $green-2 !important;
  }
}

.btn-green {
  color: $white !important;
  background-color: #5CB85C !important;
  border-color: #5CB85C !important;
}

.btn-gray {
  background-color: $gray !important;
  color: $white !important;

  &:hover {
      opacity: 0.8;
  }
}

.commonBtn {
  padding: 4px 8px !important;
  min-width: unset !important;
}

.btn-container {
  padding: 10px;
  box-sizing: border-box;
  transition: all 0.25s linear;
  border-radius: 6px;
  outline: none;
  border: none;
  cursor: pointer;
  box-shadow: unset !important;

  &:disabled {
    background-color: #dadada !important;
    cursor: not-allowed;

    .btn-content {
      color: #000000 !important;
    }
  }

  svg {
    width: 20px;
    height: 20px;
  }

  .btn-content {
    font-size: 14px;
    display: flex;
    align-items: center;
    align-items: center;
    gap: 5px;
    margin: 0;
  }

  &.MuiButtonBase-root {
    padding: 5px 15px;
  }

  @include media(960px) {
    padding: 8px;

    .btn-content {
      font-size: 13px;

      svg {
        width: 16px;
        height: 16px;
      }
    }
  }
}

.btn-white {
  background: #f3f6f9;
  box-shadow: 0px 1px 5px 0px rgba(58, 92, 144, 0.2),
    0px 3px 4px 0px rgba(58, 92, 144, 0.12),
    0px 2px 4px 0px rgba(58, 92, 144, 0.14);

  .btn-content {
    color: $black;
  }
}

.btn-gray {
  background-color: $gray !important;

  .btn-content {
    color: $white !important;
  }

  &:hover {
    background-color: $gray !important;
    opacity: 0.8;
    transition: all linear 0.2s;
  }
}

.btn-danger {
  background-color: #f12121 !important;
  color: white !important;
  transition: all linear 0.2;

  &:hover {
    opacity: 0.8;
    background-color: red !important;
  }
}

.btn-green-black {
  background-color: $green !important;
  color: $white !important;
  transition: all linear 0.2 !important;

  &:hover {
    opacity: 0.8 !important;
    transition: all linear 0.2 !important;
    background-color: green !important;
  }
}

.menuCloseButton {
  width: 50px;
  height: 50px;
  position: relative;
  background: white;
  border: none;
  vertical-align: middle;
  padding: 10px;
  margin: 0;
  cursor: pointer;
  background-color: $green;
  border-radius: 50px;

  &:focus {
    outline: 0;
  }

  &:hover {
    span,
    span:before,
    span:after {
      background: $white;
    }
  }

  &:before {
    content: "";
    opacity: 0;
    width: 0;
    height: 0;
    border-radius: 50%;
    position: absolute;
    top: 50%;
    left: 50%;
    background: transparent;
    transform: translate(-50%, -50%);
    transition: all 0.4s ease;
  }

  span {
    display: block;
    position: relative;

    &:before,
    &:after {
      content: "";
      position: absolute;
      left: 0;
    }

    &:before {
      top: -8px;
    }

    &:after {
      bottom: -8px;
    }
  }

  span,
  span:before,
  span:after {
    width: 100%;
    height: 4px;
    background: $white;
    transition: all 0.4s ease;
  }

  &.is-active {
    &:before {
      opacity: 1;
      width: 50px;
      height: 50px;
      background: $green;
    }

    span {
      background: transparent;

      &:before {
        top: 0;
        transform: rotate(225deg);
      }

      &:after {
        bottom: 0;
        transform: rotate(-225deg);
      }
    }
  }
}

.not-allowed {
  pointer-events: unset !important;
  cursor: not-allowed !important;
}

.chipContainer {
  background-color: white;
  border: 1px solid #006778;
  padding: 2px;
  min-height: 40px;
  min-width: 100%;
  border-radius: 6px;
  display: flex;
  flex-wrap: wrap;

  .chipItem {
    border: 0.4px solid #000000;
    background-color: white;
    margin: 2px;
    min-height: 32px;
    padding: 2px;
    white-space: unset !important;

    & > .MuiChip-label {
      white-space: unset !important;
    }
  }

  &.MuiChip-root {
    height: unset !important;
  }
}

input::file-selector-button {
  border: unset;
  background-color: #006778;
  color: white;
  border-radius: 12px;
  padding: 6px 8px;
  transition: all linear 0.2s;
  margin-right: 8px;

  &:hover {
    cursor: pointer;
    opacity: 0.8;
  }
}

.topImgContainer {
  position: absolute;
  top: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-top: 2px;
  margin-right: 2px;

  .actionButton {
    background-color: gray !important;
    padding: unset !important;
    border-radius: 50%;
    transition: all linear 0.2s;
    opacity: 0.8;
    color: white !important;

    .actionIcon {
      color: white;
    }

    &:hover {
      opacity: 0.6;
    }
  }
}

.contentFullScreen {
  .topImgContainer {
    .actionIcon {
      font-size: 28px;
    }
  }
}

.closeFullScreenPictureBtn {
  position: absolute;
  top: 0;
  right: 0;
  background-color: white !important;
  margin-top: 2px;
  margin-right: 2px;
  padding: 6px 8px !important;
  cursor: pointer;
  border-radius: 50%;

  & > .icon {
    color: black !important;
  }
}

.capitalize-text-confirm {
    text-transform: uppercase;
    font-size: 18px;
    color: $green;
    margin-top: 5px;
    font-weight: 700
}

.text-confirm {
    font-size: 16px;
    color: black;
}

.title {
    color: #FFFFFF !important;
    background-color: $green;
    padding: 10px 20px !important;
    text-align: center;
}

.titleText {
    color: #FFFFFF;
    font-size: 18px;
    margin: 0;
}

.content {
    padding: 8px 20px !important;
}

.contentFullScreen{
    overflow: unset !important;
}

.action-popup-form {
    border-top: 1px solid $green;
    padding: 10px 18px !important;
}

.popup-container {
    .popup-header {
        background-color: $green;
        padding: 8px 16px;

        &>h2 {
            display: flex;
            align-items: center;
            justify-content: space-between;
            width: 100%;
        }

        .popup-title {
            text-align: left;
            margin: 0;
            color: #FFFFFF;
            padding-left: 4px;
        }

        .popup__iconBtn {
            background-color: white;
            padding: 8px;

            .popup__icon {
                color: $green;
            }
        }
    }

    .popup-content {
        max-height: 65vh;
    }

    .confirm__title {
        border-bottom: 1px solid $green;
        padding: 4px 18px;
        color: $green;
        text-transform: uppercase;
        font-size: 24px;
        padding-right: 8px;

        &>.MuiTypography-root.MuiTypography-h6 {
            display: flex;
            align-items: center;
            justify-content: space-between;

            .title__icon {
                color: $green;
                font-size: 28px;
            }
        }

    }

    .confirm__content {
        padding: 12px 18px;
    }
}